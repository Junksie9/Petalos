@model Petalos.Areas.Admin.Models.FloresViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "_Layout";
}

<h2 class="titulo">Agregar imagenes a una flor</h2>

<form method="post" action="~/Admin/AgregarImagenes">
    <input type="hidden" asp-for="imagenesflores.Idflor"/>
    <label>Flor:</label>
    <input type="text" readonly="readonly" value="@Model.imagenesflores.Idflor" asp-for="imagenesflores.IdflorNavigation.Nombre" /><br />
    <label>Archivo:</label><input type="file" /><br />

    <input type="submit" value="Agregar" />
    <a href="~/Admin">
        <input type="button" value="Cancelar" />
    </a>

</form>

<div class="listaImagenes">
    <ul>
        @foreach (var item in Model.df)
        {
            <li>
                <img src='~/images/@(item.Idflor)' />
                <a href="#">Eliminar</a>
            </li>
        }


    </ul>
</div>

<div id="popErrores" class="popup" runat="server">
    <div>
        <h1>Ha ocurrido un error:</h1>
        <p id="mensajeError">Aqui va el mensaje de error</p>
        <input type="button" value="OK" />
    </div>
</div>


<div id="popConfirmacion" class="popup">
    <div>
        <h1>Por favor confirme:</h1>
        <p id="mensajeConfirmacion">Aqui va el mensaje de error</p>
        <input type="submit" value="Si" />
        <input type="button" value="No" />
    </div>
</div>



